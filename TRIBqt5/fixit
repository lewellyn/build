#!/bin/sh
VERSION=5.2.1
rm -fr usr/versions/Qt-${VERSION}/doc
rm -fr usr/versions/Qt-${VERSION}/examples
mkdir -p usr/lib/pkgconfig
cd usr/lib/pkgconfig
ln -s ../../versions/Qt-${VERSION}/lib/pkgconfig/* .
cd ../../versions/Qt-${VERSION}/lib/pkgconfig
gsed -i -e 's: -L/usr/versions/Qt-5.2.1/lib: -L/usr/versions/Qt-5.2.1/lib -R/usr/versions/Qt-5.2.1/lib:g' -e 's: -L/usr/sfw/lib::g' -e 's: -L/usr/openwin/lib::g' -e 's: -L${libdir}: -L${libdir} -R${libdir}:' *
